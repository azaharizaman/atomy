{
    "name": "nexus/common",
    "description": "Shared domain primitives, contracts, and value objects for Nexus packages",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-bcmath": "*",
        "psr/log": "^3.0",
        "symfony/uid": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Common\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Common\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
