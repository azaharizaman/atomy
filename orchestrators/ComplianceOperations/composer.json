{
    "name": "nexus/compliance-operations",
    "description": "Nexus ComplianceOperations Orchestrator - Cross-package workflow coordination for compliance processes including KYC, AML, sanctions, and privacy",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "nexus",
        "orchestrator",
        "compliance",
        "kyc",
        "aml",
        "sanctions",
        "privacy",
        "gdpr",
        "saga",
        "workflow"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/compliance": "*@dev",
        "nexus/kyc-verification": "*@dev",
        "nexus/party": "*@dev",
        "nexus/audit": "*@dev",
        "nexus/workflow": "*@dev",
        "nexus/period": "*@dev",
        "nexus/currency": "*@dev",
        "nexus/notifier": "*@dev",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\ComplianceOperations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\ComplianceOperations\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
