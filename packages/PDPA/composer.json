{
    "name": "nexus/pdpa",
    "description": "Malaysia Personal Data Protection Act (PDPA 2010) compliance extension for Nexus DataPrivacy",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "pdpa",
        "malaysia",
        "personal-data",
        "data-protection",
        "privacy",
        "compliance",
        "nexus"
    ],
    "authors": [
        {
            "name": "Nexus Architecture Team",
            "email": "architecture@nexus.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/data-privacy": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\PDPA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\PDPA\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
