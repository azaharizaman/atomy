{
    "name": "nexus/performance-review",
    "description": "Performance review management - Framework-agnostic performance appraisal, goal setting, and feedback tracking",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\PerformanceReview\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\PerformanceReview\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
