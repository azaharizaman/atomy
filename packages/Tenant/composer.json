{
    "name": "nexus/tenant",
    "description": "Framework-agnostic multi-tenancy context and isolation engine for the Nexus ERP system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Tenant\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Tenant\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
