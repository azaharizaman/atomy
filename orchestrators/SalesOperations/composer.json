{
    "name": "nexus/sales-operations",
    "description": "Nexus SalesOperations Orchestrator - Order-to-Cash workflow coordination with progressive disclosure for SMB to Enterprise",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "nexus",
        "orchestrator",
        "sales",
        "order-to-cash",
        "o2c",
        "quotation",
        "fulfillment",
        "invoicing"
    ],
    "require": {
