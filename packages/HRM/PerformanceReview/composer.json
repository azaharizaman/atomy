    "type": "library",
    "license": "MIT",
    "keywords": ["hrm", "performance", "appraisal", "kpi", "rating"],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\PerformanceReview\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\PerformanceReview\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
