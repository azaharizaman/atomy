{
    "name": "nexus/kyc-verification",
    "description": "Know Your Customer (KYC) identity verification and customer due diligence with UBO tracking",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "KYC",
        "identity-verification",
        "customer-due-diligence",
        "UBO",
        "beneficial-owner",
        "compliance",
        "CDD",
        "EDD"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/party": "^1.0",
        "nexus/document": "^1.0",
        "nexus/identity": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\KycVerification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\KycVerification\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
