{
    "name": "nexus/shift",
    "description": "Shift management - Framework-agnostic shift scheduling, rotation, and workforce planning",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Shift\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Shift\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
