{
    "name": "nexus/data-privacy",
    "description": "Framework-agnostic data privacy core: data subject rights, consent management, retention policies, breach notification",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "data-privacy",
        "consent-management",
        "data-subject-rights",
        "right-to-erasure",
        "data-portability",
        "retention-policy",
        "breach-notification",
        "privacy"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\DataPrivacy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\DataPrivacy\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
