{
    "name": "nexus/identity-operations",
    "description": "Non-operational orchestrator for user lifecycle management - defines interfaces for Identity, Tenant, and AuditLogger operations",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "nexus/identity": "*@dev",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\IdentityOperations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\IdentityOperations\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
