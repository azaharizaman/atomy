{
    "name": "nexus/backoffice",
    "description": "Framework-agnostic company structure, offices, departments, and staff organizational units management package for Nexus ERP",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "nexus",
        "erp",
        "backoffice",
        "organizational-structure",
        "company-management",
        "staff-management",
        "hierarchy"
    ],
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@example.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Backoffice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Backoffice\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
