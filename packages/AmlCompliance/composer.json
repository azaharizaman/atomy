{
    "name": "nexus/aml-compliance",
    "description": "Anti-Money Laundering (AML) risk assessment and transaction monitoring with SAR generation",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "AML",
        "anti-money-laundering",
        "risk-assessment",
        "transaction-monitoring",
        "SAR",
        "compliance",
        "financial-crime"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/party": "^1.0",
        "nexus/sanctions": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\AmlCompliance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\AmlCompliance\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
