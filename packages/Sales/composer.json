{
    "name": "nexus/sales",
    "description": "Framework-agnostic sales management package for quotation-to-order lifecycle",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0"
    },
    "suggest": {
        "nexus/party": "Required for customer data integration",
        "nexus/product": "Required for product variant data",
        "nexus/uom": "Required for unit of measure handling",
        "nexus/currency": "Required for exchange rate locking",
        "nexus/finance": "Required for financial calculations",
        "nexus/sequencing": "Required for order number generation",
        "nexus/period": "Required for period management",
        "nexus/audit-logger": "Required for audit trail",
        "nexus/inventory": "Required for stock reservation",
        "nexus/receivable": "Required for credit checking and invoice generation"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Sales\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Sales\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
