{
    "name": "nexus/laravel-sales",
    "description": "Laravel adapter for Sales package with cross-package integrations",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "nexus/sales": "*@dev",
        "nexus/party": "*@dev",
        "nexus/product": "*@dev",
        "nexus/inventory": "*@dev",
        "nexus/receivable": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Laravel\\Sales\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Laravel\\Sales\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Laravel\\Sales\\Providers\\SalesAdapterServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}