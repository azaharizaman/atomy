{
    "name": "nexus/feature-flags",
    "description": "Production-grade feature flag management with context-based evaluation, percentage rollout, and kill switches",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "feature-flags",
        "feature-toggles",
        "ab-testing",
        "canary-deployment",
        "kill-switch",
        "percentage-rollout",
        "tenant-isolation"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "dev@nexus.local"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "nexus/monitoring": "For telemetry tracking and performance metrics",
        "nexus/audit-logger": "For audit trail of flag definition changes"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\FeatureFlags\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\FeatureFlags\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
