{
    "name": "nexus/sso",
    "description": "Framework-agnostic Single Sign-On package for Nexus ERP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nexus\\SSO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\SSO\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Nexus Development Team"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
