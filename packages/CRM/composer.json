{
    "name": "nexus/crm",
    "description": "Pure CRM domain logic package with zero business package dependencies for Nexus ERP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\CRM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\CRM\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
