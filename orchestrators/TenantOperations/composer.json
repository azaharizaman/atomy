{
    "name": "nexus/tenant-operations",
    "description": "Non-operational orchestrator for multi-tenant lifecycle management - coordinates Tenant, Setting, FeatureFlags, Backoffice, and AuditLogger packages",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "nexus/tenant": "*@dev",
        "nexus/setting": "*@dev",
        "nexus/feature-flags": "*@dev",
        "nexus/backoffice": "*@dev",
        "nexus/audit-logger": "*@dev",
        "nexus/identity": "*@dev",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\TenantOperations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\TenantOperations\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
