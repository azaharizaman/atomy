{
    "name": "nexus/payment",
    "description": "Framework-agnostic payment domain package providing unified payment entity, instruments, allocations, and event-driven integration for AR/AP/Payroll",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "payment",
        "erp",
        "accounting",
        "receivable",
        "payable",
        "allocation",
        "framework-agnostic"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/common": "^1.0",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Payment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Payment\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
