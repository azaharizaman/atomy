{
    "name": "nexus/kyc-verification",
    "description": "Know Your Customer (KYC) identity verification and customer due diligence with UBO tracking - atomic, framework-agnostic package",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "KYC",
        "identity-verification",
        "customer-due-diligence",
        "UBO",
        "beneficial-owner",
        "compliance",
        "CDD",
        "EDD",
        "risk-assessment",
        "verification"
    ],
    "authors": [
        {
            "name": "Nexus Architecture Team",
            "email": "team@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\KycVerification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\KycVerification\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
