{
    "name": "nexus/payment-bank",
    "description": "Payment bank extension providing direct bank integrations for real-time payments, open banking (PSD2), and bank account verification",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "payment",
        "bank",
        "open-banking",
        "psd2",
        "real-time-payments",
        "account-verification",
        "erp"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/payment": "*@dev",
        "nexus/common": "*@dev",
        "nexus/connector": "*@dev",
        "nexus/crypto": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "nexus/payment-rails": "For ACH/Wire transmission via bank rails"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\PaymentBank\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\PaymentBank\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
