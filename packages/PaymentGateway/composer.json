{
    "name": "nexus/payment-gateway",
    "description": "Payment gateway extension providing integrations with Stripe, PayPal, Square, and other online payment processors",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "payment",
        "gateway",
        "stripe",
        "paypal",
        "square",
        "online-payment",
        "erp"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/payment": "*@dev",
        "nexus/common": "*@dev",
        "nexus/connector": "*@dev",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^3.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\PaymentGateway\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\PaymentGateway\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
