{
    "name": "nexus/finance-operations",
    "description": "Framework-agnostic finance workflow orchestrator for day-to-day financial operations including cash flow management, cost allocation, depreciation coordination, GL posting, and budget tracking.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "nexus",
        "finance",
        "orchestrator",
        "accounting",
        "treasury",
        "cost-allocation",
        "depreciation",
        "gl-posting",
        "budget-tracking",
        "framework-agnostic"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.11",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\FinanceOperations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\FinanceOperations\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests --level=max",
        "check": [
            "@analyse",
            "@test"
        ]
    }
}
