{
    "name": "nexus/audit-logger",
    "description": "Framework-agnostic audit logging package for tracking CRUD operations and system activities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Team",
            "email": "dev@nexus.local"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\AuditLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\AuditLogger\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
