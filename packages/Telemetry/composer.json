{
    "name": "nexus/telemetry",
    "description": "Framework-agnostic monitoring, telemetry tracking, health checks, and alert management package for the Nexus ERP system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "nexus/notifier": "For alert notification delivery",
        "nexus/audit-logger": "For audit trail integration",
        "nexus/tenant": "For multi-tenancy metric tagging"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Telemetry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Telemetry\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
