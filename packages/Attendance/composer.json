{
    "name": "nexus/attendance",
    "description": "Attendance tracking and management - Framework-agnostic attendance recording, validation, and reporting",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Attendance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Attendance\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
