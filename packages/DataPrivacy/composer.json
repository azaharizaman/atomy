{
    "name": "nexus/data-privacy",
    "description": "GDPR data subject rights management, consent tracking, and data retention policies",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "GDPR",
        "data-privacy",
        "consent-management",
        "data-subject-rights",
        "right-to-erasure",
        "data-portability",
        "CCPA",
        "LGPD",
        "PIPEDA"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/party": "^1.0",
        "nexus/audit-logger": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\DataPrivacy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\DataPrivacy\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
