{
    "name": "nexus/disciplinary",
    "description": "Employee misconduct reporting, case management, warnings, sanctions, and policy enforcement",
    "type": "library",
    "license": "MIT",
    "keywords": ["hrm", "disciplinary", "case-management", "sanctions", "misconduct"],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Disciplinary\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Disciplinary\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
