{
    "name": "nexus/monorepo",
    "description": "Nexus - Framework-Agnostic PHP Packages for ERP Systems",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/identity": "*@dev",
        "nexus/backoffice": "*@dev",
        "nexus/machine-learning": "*@dev",
        "nexus/geo": "*@dev",
        "nexus/routing": "*@dev",
        "nexus/inventory": "*@dev",
        "nexus/warehouse": "*@dev",
        "nexus/manufacturing": "*@dev",
        "symfony/http-client": "^7.3",
        "nyholm/psr7": "^1.8",
        "psr/http-client": "^1.0",
        "nexus/event-stream": "*@dev",
        "nexus/tax": "*@dev",
        "nexus/procurement-ml": "*@dev",
        "nexus/tenant": "*@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./packages/domain/*/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./packages/support/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./packages/operations/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    }
}
