{
    "name": "nexus/training",
    "description": "Training management - Framework-agnostic training programs, certifications, and skill development tracking",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Training\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Training\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
