{
    "name": "nexus/onboarding",
    "description": "Employee onboarding - Framework-agnostic new hire onboarding workflows, task management, and orientation tracking",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Onboarding\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Onboarding\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
