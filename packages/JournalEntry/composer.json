{
    "name": "nexus/journal-entry",
    "description": "Framework-agnostic journal entry management for general ledger systems",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "accounting",
        "journal-entry",
        "general-ledger",
        "double-entry",
        "bookkeeping",
        "finance",
        "erp"
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-bcmath": "*",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\JournalEntry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\JournalEntry\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
