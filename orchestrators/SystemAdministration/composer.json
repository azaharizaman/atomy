{
    "name": "nexus/system-administration",
    "description": "Non-operational orchestrator for platform-level administration and observability - defines interfaces for monitoring, audit, compliance, and notification operations",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\SystemAdministration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\SystemAdministration\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
