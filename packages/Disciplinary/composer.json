{
    "name": "nexus/disciplinary",
    "description": "Disciplinary management - Framework-agnostic disciplinary action tracking, warnings, and case management",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Disciplinary\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Disciplinary\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
