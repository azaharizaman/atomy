{
    "name": "nexus/localization",
    "description": "Framework-agnostic localization and formatting engine for the Nexus ERP system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-intl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Localization\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Localization\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
