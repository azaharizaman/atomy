{
    "name": "nexus/recruitment",
    "description": "Recruitment management - Framework-agnostic job posting, application tracking, interview scheduling, and candidate evaluation",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Recruitment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Recruitment\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
