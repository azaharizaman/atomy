{
    "name": "nexus/scheduler",
    "description": "Framework-agnostic job scheduling engine for managing future-dated instructions with handler-based execution",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nexus\\Scheduler\\": "src/"
        }
    },
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0",
        "dragonmantank/cron-expression": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Scheduler\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml.dist",
        "test:coverage": "phpunit -c phpunit.xml.dist --coverage-text"
    },
    "suggest": {
        "dragonmantank/cron-expression": "Required for cron-based recurrence scheduling"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
