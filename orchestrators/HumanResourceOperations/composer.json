{
    "name": "nexus/human-resource-operations",
    "description": "HR Operations Orchestrator - Coordinates all HR domain packages including Leave, Attendance, Payroll, Employee, Shift, Disciplinary, Performance Review, Training, Recruitment, and Onboarding",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "nexus/common": "*@dev",
        "nexus/hrm": "*@dev",
        "nexus/attendance": "*@dev",
        "nexus/leave": "*@dev",
        "nexus/shift": "*@dev",
        "nexus/disciplinary": "*@dev",
        "nexus/performance-review": "*@dev",
        "nexus/training": "*@dev",
        "nexus/recruitment": "*@dev",
        "nexus/onboarding": "*@dev",
        "nexus/payroll": "*@dev",
        "nexus/payroll-mys-statutory": "*@dev",
        "nexus/identity": "*@dev",
        "nexus/crypto": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\HumanResourceOperations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\HumanResourceOperations\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/HRM/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path", 
            "url": "../../packages/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
