{
    "name": "nexus/sanctions",
    "description": "Regulatory screening engine for sanctions lists (OFAC, UN, EU, UK HMT) and PEP detection with fuzzy matching",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "sanctions",
        "OFAC",
        "PEP",
        "compliance",
        "regulatory",
        "screening",
        "AML",
        "financial-crime"
    ],
    "repositories": [
        {
            "type": "path",
            "url": "./../../packages/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/common": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Sanctions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Sanctions\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
