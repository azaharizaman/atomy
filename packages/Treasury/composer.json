{
    "name": "nexus/treasury",
    "description": "Atomic package for treasury management - liquidity pools, cash concentration, working capital optimization, and treasury analytics",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Team",
            "email": "team@nexus.example.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Treasury\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Treasury\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
